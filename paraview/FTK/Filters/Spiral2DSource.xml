<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <SourceProxy name="Spiral2DSource" class="vtkSpiral2DSource" label="Spiral2DSource">
      <Documentation
        short_help="synthetic 2D time-varying data for FTK"
        long_help="synthetic 2D time-varying data for FTK">
      </Documentation>

      <IntVectorProperty 
        name="Width"
        command="setW"
        number_of_elements="1"
        default_values="32">
      </IntVectorProperty>
      
      <IntVectorProperty 
        name="Height"
        command="setH"
        number_of_elements="1"
        default_values="32">
      </IntVectorProperty>
      
      <IntVectorProperty 
        name="Timesteps"
        command="setT"
        number_of_elements="1"
        default_values="10">
      </IntVectorProperty>
      
      <DoubleVectorProperty
        name="ScalingFactor"
        command="setScalingFactor"
        number_of_elements="1"
        default_values="15.0">
      </DoubleVectorProperty>

      <Hints>
        <ShowInMenu category="FTK"/>
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
