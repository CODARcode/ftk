<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <SourceProxy name="TornadoFlow3DSource" class="ftkTornadoFlow3DSource" label="TornadoFlow3DSource">
      <Documentation
        short_help="synthetic 3D Tornado flow data for FTK"
        long_help="synthetic 3D Tornado flow data for FTK">
      </Documentation>

      <IntVectorProperty 
        name="Width"
        command="SetDW"
        number_of_elements="1"
        default_values="32">
      </IntVectorProperty>
      
      <IntVectorProperty 
        name="Height"
        command="SetDH"
        number_of_elements="1"
        default_values="32">
      </IntVectorProperty>
      
      <IntVectorProperty 
        name="Depth"
        command="SetDD"
        number_of_elements="1"
        default_values="32">
      </IntVectorProperty>

      <Hints>
        <ShowInMenu category="FTK"/>
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
